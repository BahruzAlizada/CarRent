@model List<Transport>

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>
            Cars
        </h2>
        <div>
            <a asp-action="Create" class="btn btn-success text-white" style="margin-right:10px">Create</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Ban</th>
                        <th>Year</th>
                        <th>Authomatic</th>
                        <th>Gaz</th>
                        <th>Status</th>
                        <th style="text-align:right">Actions</th>
                    </tr> 
                </thead>
                <tbody>
                    @foreach (Transport item in Model)
                    {
                        <tr>
                            <td>
                                 <img src="~/img/@item.TransportImages[0].Image" style="height:90px;width:190px;object-fit:cover;">
                            </td>
                            <td>@item.TransportMarka.MarkaName</td>
                            <td>@item.TransportMarka.Children</td>
                            <td>@item.TransportBan.Name</td>
                            <td>@item.TransportYear.Year</td>
                            <td>
                                @if(item.Automathic==true){<span style="background-color:green;color:white;padding:6px 4px;">Authomatic</span>}
                                else{<span style="background-color:red;color:white;padding:6px 4px;">Mechanic</span>}
                            </td>
                            @*<td>
                                @if(item.Benzin){<span style="background-color:green;color:white;padding:6px 4px;">Benzin</span>}
                                else{<span style="background-color:red;color:white;padding:6px 4px;">Diesel</span>}
                            </td>*@
                            <td>
                                @if (item.IsDeactive)
                                {
                                    <span style="background-color:red;color:white;padding:6px 4px;">Deactive</span>
                                }
                                else
                                {
                                    <span style="background-color:green;color:white;padding:6px 4px;">Active</span>
                                }
                            </td>
                            <td>
                                <div style="display:flex;justify-content:flex-end">
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info text-white" style="margin-right:10px">Update</a>
                                    @if (item.IsDeactive)
                                    {
                                        <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-success text-white" style="margin-right:10px;width:117px;">Activate</a>
                                    }
                                    else
                                    {
                                        <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger text-white" style="margin-right:10px;width:117px;">Deactivate</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />


