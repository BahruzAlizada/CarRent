@model BioSMediaVM

<div class="col-md-6 text-center text-lg-left mb-2 mb-lg-0">
    <div class="d-inline-flex align-items-center">
        <p class="text-body pr-3"><i class="fa fa-phone-alt mr-2"></i>+@Model.Bio.HeaderPhone</p>
        <span class="text-body">|</span>
        <p class="text-body px-3"><i class="fa fa-envelope mr-2"></i>@Model.Bio.HeaderEmail</p>
    </div>
</div>
<div class="col-md-6 text-center text-lg-right">
    <div class="d-inline-flex align-items-center">

        <a class="text-body px-3" href="@Model.SocialMedia.FacebookLink">
            <i class="fab fa-facebook-f"></i>
        </a>

        <a class="text-body px-3" href="@Model.SocialMedia.InstgramLink">
            <i class="fab fa-instagram"></i>
        </a>      
      
        <a class="text-body px-3" href="@Model.SocialMedia.TvitterLink">
            <i class="fab fa-twitter"></i>
        </a>

        <a class="text-body pl-3" href="@Model.SocialMedia.YoutbeLink">
            <i class="fab fa-youtube"></i>
        </a>

    </div>
</div>