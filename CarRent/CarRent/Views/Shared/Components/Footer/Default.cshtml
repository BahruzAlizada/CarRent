@model BioSMediaVM

<div class="col-lg-3 col-md-6 mb-5">
    <h4 class="text-uppercase text-light mb-4">Get In Touch</h4>
    <p class="mb-2"><i class="fa fa-map-marker-alt text-white mr-3"></i>@Model.Bio.FooterAddress</p>
    <p class="mb-2"><i class="fa fa-phone-alt text-white mr-3"></i>+@Model.Bio.FooterPhone</p>
    <p><i class="fa fa-envelope text-white mr-3"></i>@Model.Bio.FooterEmail</p>
    <h6 class="text-uppercase text-white py-2">Follow Us</h6>
    <div class="d-flex justify-content-start">
        <a class="btn btn-lg btn-dark btn-lg-square mr-2" href="@Model.SocialMedia.TvitterLink"><i class="fab fa-twitter"></i></a>
        <a class="btn btn-lg btn-dark btn-lg-square mr-2" href="@Model.SocialMedia.FacebookLink"><i class="fab fa-facebook-f"></i></a>
        <a class="btn btn-lg btn-dark btn-lg-square mr-2" href="@Model.SocialMedia.YoutbeLink"> <i class="fab fa-youtube"></i></a>
        <a class="btn btn-lg btn-dark btn-lg-square" href="@Model.SocialMedia.InstgramLink"><i class="fab fa-instagram"></i></a>
    </div>
</div>

